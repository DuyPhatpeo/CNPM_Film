@model ProjectFilm_CNPM.Models.ERD.NguoiDung

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = Model;
}
<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-card {
            max-width: 300px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .profile-card .user-info {
                text-align: center;
            }

                .profile-card .user-info img {
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                    margin-bottom: 10px;
                }

                .profile-card .user-info h4 {
                    margin-bottom: 5px;
                }

                .profile-card .user-info p {
                    color: #ff8c00;
                    font-weight: bold;
                }

            .profile-card .spending-info {
                text-align: center;
                margin-top: 20px;
            }

        .profile-form {
            max-width: 600px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-control[readonly] {
            background-color: #e9ecef;
            opacity: 1;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                font-weight: bold;
            }

        .update-button {
            background-color: #ff8c00;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .icon {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 10px;
            color: #6c757d;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
        }
    </style>
</head>
<div class="main-banner" id="top">

</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-card">
                <div class="user-info">
                    <h4>@item.TenND</h4>
                    <p>0 Stars</p>
                </div>
                <div class="spending-info">
                    <h5>Tổng chi tiêu 2024</h5>
                    <p>0 ₫</p>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span>0 ₫</span>
                        <span>2.000.000 ₫</span>
                        <span>4.000.000 ₫</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="profile-form">
                <form>
                    <div class="form-group">
                        <label for="fullName">Họ và tên</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user icon"></i></span>
                            </div>
                            <input type="text" class="form-control" id="fullName" value="@item.TenND" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="dob">Ngày sinh</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-calendar-alt icon"></i></span>
                            </div>
                            <input type="text" class="form-control" id="dob" value="@item.NgaySinh" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3"><i class="fas fa-envelope icon"></i></span>
                            </div>
                            <input type="email" class="form-control" id="email" value="@item.Email" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon4"><i class="fas fa-phone icon"></i></span>
                            </div>
                            <input type="text" class="form-control" id="phone" value="@item.SDT" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="true" checked disabled>
                            <label class="form-check-label" for="male">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="false" disabled>
                            <label class="form-check-label" for="female">Nữ</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon5"><i class="fas fa-lock icon"></i></span>
                            </div>
                            <input type="password" class="form-control" id="password" value="••••••••" readonly>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

