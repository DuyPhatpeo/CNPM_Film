    function fetchSeats() {
    $.ajax({
        url: '@Url.Action("GetTinhTrangGhe", "Site")',
        type: 'GET',
        data: { },
        success: function(data) {
            if (data.redirectToLogin) {
                window.location.href = '@Url.Action("DangNhap", "User")';
            } else {
                displaySeats(data);
            }
        },
        error: function() {
            alert("Lỗi khi lấy danh sách ghế.");
        }
    });
}


    function displaySeats(seats) {
        let seatsContainer = document.querySelector(".all-seats");
        seatsContainer.innerHTML = ''; // Clear existing seats

        seats.forEach(seat => {
            let booked = seat.TinhTrangGhe ? 'booked' : '';
            let seatClass = '';
            switch (seat.LoaiGhe) {
                case 'VIP':
                    seatClass = 'vip';
                    break;
                case 'Đôi':
                    seatClass = 'double';
                    break;
                case 'Đơn':
                    seatClass = 'single';
                    break;
                default:
                    seatClass = '';
                    break;
            }
            seatsContainer.insertAdjacentHTML(
                "beforeend",
                '<input type="checkbox" name="tickets" id="s' + seat.MaGhe + '" />' +
                '<label for="s' + seat.MaGhe + '" class="seat ' + seatClass + ' ' + booked + '"></label>'
            );

        });

        let tickets = seatsContainer.querySelectorAll("input");
        tickets.forEach((ticket) => {
            ticket.addEventListener("change", () => {
                let totalPrice = document.querySelector(".totalPrice").innerHTML;
                let count = document.querySelector(".count").innerHTML;
                let giaGhe = seats.find(seat => seat.MaGhe === parseInt(ticket.id.substring(1))).GiaGhe;
                totalPrice = Number(totalPrice);
                count = Number(count);
                // Sử dụng giá của ghế từ dữ liệu trả về
                if (ticket.checked) {
                    count += 1;
                    totalPrice += giaGhe;
                } else {
                    count -= 1;
                    totalPrice -= giaGhe;
                }
                document.querySelector(".totalPrice").innerHTML = totalPrice;
                document.querySelector(".count").innerHTML = count;
            });
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.showtime_btn').forEach(button => {
            button.addEventListener('click', function () {
                // Xóa lớp 'active' từ tất cả các nút
                document.querySelectorAll('.showtime_btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Thêm lớp 'active' cho nút được nhấp
                this.classList.add('active');

                fetchSeats();
            });
        });
    });

    document.querySelector('.custom-btn').addEventListener('click', function() {
    let selectedSeats = [];
    document.querySelectorAll('.all-seats input:checked').forEach(checkbox => {
        selectedSeats.push(checkbox.id.substring(1));
    });

    let maSuatChieu = '';
    document.querySelectorAll('.showtime_btn').forEach(button => {
        if (button.classList.contains('active')) {
            maSuatChieu = button.getAttribute('data-masuatchieu');
        }
    });
        let totalPrice = document.querySelector('.totalPrice').innerText;
    let requestData = {
        maSuatChieu: maSuatChieu,
        selectedSeats: selectedSeats,
        totalPrice: totalPrice
    };

    // Make AJAX call to TaoHoaDon action
    $.ajax({
        url: '@Url.Action("TaoHoaDon", "Site")',
        type: 'POST',
        data: JSON.stringify(requestData),
        contentType: 'application/json',
        success: function (response) {
            if (response.success) {
                window.location.href = '@Url.Action("VeXemPhim", "Site")';

            } else {
                alert('Đặt vé thất bại. Vui lòng đặt lại sau.');
            }
        },
        error: function () {
            alert('Lỗi khi đặt vé!!! :<');
        }
    });
});

</script>
