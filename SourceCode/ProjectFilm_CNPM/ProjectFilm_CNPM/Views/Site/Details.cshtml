@model IEnumerable<ProjectFilm_CNPM.Models.ERD.SuatChieu>

@{
    ViewBag.Title = "Chi tiết phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = ViewBag.phim;
}
<head>
    <style>

        .custom-btn {
            background-color: #7a6ad8;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .custom-btn:hover {
                background-color: #d3d3d3;
            }

        .vertical-bar {
            border-left: 4px solid #007bff;
            height: 10px;
        }

        .title-with-line {
            position: relative;
            padding-left: 15px;
        }

            .title-with-line::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 5px;
                background-color: blue;
            }

        .info-item {
            margin-bottom: 10px;
        }

        .showtime-container {
            display: flex;
            flex-wrap: wrap;
        }

        .showtime-item {
            margin: 5px;
        }

        .showtime_btn {
            /*            background-color: #7a6ad8;

            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;*/
            color: black;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .showtime_btn:hover {
                background-color: #007bff; /* Màu primary */
                color: white;
                transition: background-color 0.5s ease-in-out, color 0.3s ease-in-out;
            }

        .showtime-item a {
            color: black;
        }

        .showtime-item.selected {
            border-radius: 10px;
            background-color: #007bff;
        }

            .showtime-item.selected a {
                color: white;
            }
    </style>
</head>
<div class="main-banner" id="top">

</div>
<div class="container">
    <div class="row ">
        <div class="col-lg-12">
            <section class="container-fluid p-5 mt-5 ">
                <div class="row my-5">
                    <div class="col-md-3 col-lg-4 movie-poster-container">
                        <div class="card movie-poster">
                            <img src="~/Public/img/phim/@item.Anh" alt="" class="card-img-top" />
                        </div>
                    </div>
                    <div class="col-md-9 col-lg-8 movie-desc-container ml-2">
                        <div class="d-flex d-inline-flex align-items-center align-items-md-start movie-desc-head">
                            <h1 class="text-center text-md-start mb-3 mb-md-0 mr-md-3">@item.TenPhim</h1>
                            <span class="badge bg-secondary">
                                @if (item.PhanLoai == 0)
                                {
                                    @:T18
                                }
                                else if (item.PhanLoai == 1)
                                {
                                    @:T16
                                }
                                else if (item.PhanLoai == 2)
                                {
                                    @:T13
                                }
                                else if (item.PhanLoai == 3)
                                {
                                    @:K
                                }
                                else if (item.PhanLoai == 4)
                                {
                                    @:P
                                }
                                else if (item.PhanLoai == 5)
                                {
                                    @:C
                                }
                            </span>
                        </div>
                        <div class="row g-0">
                            <div class="col-md-12 info-item d-flex align-items-center">
                                <div>
                                    <i class="fa-solid fa-clock "></i>
                                    <span class="d-inline">@item.ThoiLuong phút</span>
                                </div>
                                <div class="mx-2">
                                    <i class="fa-regular fa-calendar"></i>
                                    <span class="d-inline">@item.NamPhatHanh</span>
                                </div>
                            </div>
                        </div>
                        <div class="row g-0">
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Quốc gia: </h5>
                                <span class="d-inline">@item.QuocGia</span>
                            </div>
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Thể loại: </h5>
                                @foreach (var theLoai in ViewBag.listTheLoai)
                                {
                                    <span class="d-inline">@theLoai.TenTheLoai</span>
                                    if (theLoai != ViewBag.listTheLoai[ViewBag.listTheLoai.Count - 1])
                                    {
                                        <span class="d-inline">, </span>
                                    }
                                }
                            </div>


                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Đạo diễn: </h5>
                                <span class="d-inline">@item.DaoDien</span>
                            </div>
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Diễn viên: </h5>
                                <span class="d-inline">@item.DienVien</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <h5 class="title-with-line">Mô tả</h5>
                    <p class="synopsis-desc">@item.MoTa</p>
                </div>
                <div>
                    <h5 class="title-with-line mt-5">Lịch chiếu</h5>
                    <div class="showtime-container" id="gioChieuContainer">
                        @foreach (var kvp in ViewBag.suatChieusByDate)
                        {
                            <div class="row col-12">
                                <div class="d-flex flex-wrap">
                                    <div class="d-flex align-items-center" style="margin-right: 30px;">
                                        <span class="font-weight-bold">@kvp.Key.ToString("dddd")</span>
                                        <span class="mx-2">@kvp.Key.ToString("dd/MM")</span>
                                    </div>
                                    @foreach (var suatChieu in kvp.Value)
                                    {
                                        <div class="row-cols-4 d-flex justify-content-center align-items-center" style="margin-right:30px">
                                            <div class="flex flex-row d-flex py-5" style="column-gap:.75rem;flex-wrap:wrap;col-gap:.56rem;flex-direction:row;">
                                                <button type="button" class="btn py-2 px-6 md:px-6 px-6 border rounded text-sm hover:bg-blue-10 active:bg-blue-10 transition-all duration-500 easy-in-out hover:text-white showtime_btn" style="font-size: .875rem; font-weight: 400; padding-left: 1rem; padding-right: 1rem; margin-right: 0.5rem; margin-bottom: 0.25rem;">
                                                    @suatChieu.GioChieu.ToString("HH:mm")
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>



                </div>

            </section>
            <div class="d-flex justify-content-around mt-4">
                <a href="#" class="btn custom-btn">Đặt vé</a>
            </div>
        </div>
    </div>
</div>
