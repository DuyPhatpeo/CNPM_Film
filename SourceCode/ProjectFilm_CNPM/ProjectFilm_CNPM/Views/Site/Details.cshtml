@model IEnumerable<ProjectFilm_CNPM.Models.ERD.SuatChieu>

@{
    ViewBag.Title = "Chi tiết phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = ViewBag.phim;
}
<head>
    <style>

        .custom-btn {
            background-color: #7a6ad8;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .custom-btn:hover {
                background-color: #d3d3d3;
            }

        .vertical-bar {
            border-left: 4px solid #007bff;
            height: 10px;
        }

        .title-with-line {
            position: relative;
            padding-left: 15px;
        }

            .title-with-line::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 5px;
                background-color: blue;
            }

        .info-item {
            margin-bottom: 10px;
        }

        .showtime-container {
            display: flex;
            flex-wrap: wrap;
        }

        .showtime-item {
            margin: 5px;
        }

        .showtime_btn {
            /*            background-color: #7a6ad8;

            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;*/
            color: black;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .showtime_btn:hover {
                background-color: #007bff; /* Màu primary */
                color: white;
                transition: background-color 0.5s ease-in-out, color 0.3s ease-in-out;
            }

        .showtime-item a {
            color: black;
        }

        .showtime-item.selected {
            border-radius: 10px;
            background-color: #007bff;
        }

            .showtime-item.selected a {
                color: white;
            }
    </style>
</head>
<div class="main-banner" id="top">

</div>
<div class="container">
    <div class="row ">
        <div class="col-lg-12">
            <section class="container-fluid p-5 mt-5 ">
                <div class="row my-5">
                    <div class="col-md-3 col-lg-4 movie-poster-container">
                        <div class="card movie-poster">
                            <img src="~/Public/img/phim/@item.Anh" alt="" class="card-img-top" />
                        </div>
                    </div>
                    <div class="col-md-9 col-lg-8 movie-desc-container ml-2">
                        <div class="d-flex d-inline-flex align-items-center align-items-md-start movie-desc-head">
                            <h1 class="text-center text-md-start mb-3 mb-md-0 mr-md-3">@item.TenPhim</h1>
                            <span class="badge bg-secondary">
                                @if (item.PhanLoai == 0)
                                {
                                    @:T18
                                }
                                else if (item.PhanLoai == 1)
                                {
                                    @:T16
                                }
                                else if (item.PhanLoai == 2)
                                {
                                    @:T13
                                }
                                else if (item.PhanLoai == 3)
                                {
                                    @:K
                                }
                                else if (item.PhanLoai == 4)
                                {
                                    @:P
                                }
                                else if (item.PhanLoai == 5)
                                {
                                    @:C
                                }
                            </span>
                        </div>
                        <div class="row g-0">
                            <div class="col-md-12 info-item d-flex align-items-center">
                                <div>
                                    <i class="fa-solid fa-clock "></i>
                                    <span class="d-inline">@item.ThoiLuong phút</span>
                                </div>
                                <div class="mx-2">
                                    <i class="fa-regular fa-calendar"></i>
                                    <span class="d-inline">@item.NamPhatHanh</span>
                                </div>
                            </div>
                        </div>
                        <div class="row g-0">
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Quốc gia: </h5>
                                <span class="d-inline">@item.QuocGia</span>
                            </div>
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Thể loại: </h5>
                                @foreach (var theLoai in ViewBag.listTheLoai)
                                {
                                    <span class="d-inline">@theLoai.TenTheLoai</span>
                                    if (theLoai != ViewBag.listTheLoai[ViewBag.listTheLoai.Count - 1])
                                    {
                                        <span class="d-inline">, </span>
                                    }
                                }
                            </div>


                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Đạo diễn: </h5>
                                <span class="d-inline">@item.DaoDien</span>
                            </div>
                            <div class="col-md-12 info-item">
                                <h5 class="d-inline">Diễn viên: </h5>
                                <span class="d-inline">@item.DienVien</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <h5 class="title-with-line">Mô tả</h5>
                    <p class="synopsis-desc">@item.MoTa</p>
                </div>
                <div>
                    <div><h5 class="title-with-line mt-5">Lịch chiếu</h5></div>

                    <div class="showtime-container" id="gioChieuContainer">
                        @{
                            var isFirst = true;
                        }
                        <div class="showtime-container" id="gioChieuContainer">
                            @{
                                
                            }
                            @foreach (var suatChieu in ViewBag.listSuatChieu)
                            {
                                <div class="showtime-item px-5 @(isFirst ? "selected" : "")" tabindex="-1" data-ngaychieu="@suatChieu.GioChieu">
                                    <a class="flex-wrap flex d-flex align-items-center text-center text-sm py-2" style="width:80px; height:65px;border-radius:5px;cursor:pointer">
                                        <span class="w-100" style="display:inline-block">
                                            @suatChieu.GioChieu.ToString("dd/MM") <!-- Display only the date -->
                                        </span>
                                        <span class="w-100" style="display:inline-block">
                                            @suatChieu.GioChieu.ToString("HH:mm") <!-- Display only the time -->
                                        </span>
                                    </a>
                                </div>
                                isFirst = false;
                            }
                        </div>

                    </div>

                    @Html.Partial("ListGioChieu")


                </div>
            </section>
            <div class="d-flex justify-content-around mt-4">
                <a href="#" class="btn custom-btn">Đặt vé</a>
            </div>
        </div>
    </div>
</div>
<script>
    // Vanilla JavaScript for handling showtime item clicks
    document.addEventListener("DOMContentLoaded", function () {
        var showtimeItems = document.querySelectorAll(".showtime-item");

        showtimeItems.forEach(function (item) {
            item.addEventListener("click", function () {
                showtimeItems.forEach(function (el) {
                    el.classList.remove("selected");
                });
                item.classList.add("selected");
            });
        });
    });

    // jQuery for AJAX request to update showtimes
    $(document).ready(function () {
        $(".showtime-item").click(function () {
            var ngayChieu = $(this).data("ngaychieu");
            $.ajax({
                url: '@Url.Action("ListGioChieu", "Site")',
                type: 'GET',
                data: { NgayChieu: ngayChieu },
                success: function (result) {
                    $("#gioChieuContainer").html(result);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                    // Handle errors gracefully
                }
            });
        });
    });
</script>
