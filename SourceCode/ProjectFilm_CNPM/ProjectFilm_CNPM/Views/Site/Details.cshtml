@model ProjectFilm_CNPM.Models.ERD.Phim

@{
    ViewBag.Title = "DetailsItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = Model;
}
<div class="main-banner" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <section class="container-fluid p-0 mt-5">
                    <div class="row ">
                        <div class="col-md-3 col-lg-4 movie-poster-container">
                            <div class="card movie-poster">
                                <img src="~/Public/img/phim/@item.Anh" alt="" class="card-img-top" />
                            </div>
                        </div>
                        <div class="col-md-9 col-lg-8 movie-desc-container ml-2">
                            <div class="d-flex flex-column align-items-center align-items-md-start movie-desc-head">
                                <h1 class="text-center text-md-start">@item.TenPhim</h1>
                            </div>
                            <div class="row g-0">
                                <div class="col-md-6">
                                    <h6 class=" ">Năm phát hành</h6>
                                    <span class=" ">@item.NamPhatHanh</span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class=" ">Đạo diễn</h6>
                                    <span class=" ">@item.DaoDien</span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class=" ">Thời lượng</h6>
                                    <span class=" ">@item.ThoiLuong phút</span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class=" ">Diễn viên</h6>
                                    <span class=" ">@item.DienVien</span>
                                </div>
                            </div>
                            <div class="separator"></div>
                            <div>
                                <h5>Mô tả</h5>
                                <p class="synopsis-desc">@item.MoTa</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-around">
                            <a href="#" class="btn btn-primary">Đặt vé</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>


