<head>
    <style>
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            border-radius: 8px;
            
        }

        .dropdown-list {
            color: black;
            display: none;
            position: absolute;
            background-color: #94d2bd;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            padding: 0;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

            .dropdown-list a {
                color: black;
                background-color: #94d2bd;
                padding: 8px 12px;
                text-decoration: none;
                display: block;
                text-align: center;
                white-space: nowrap;
                line-height: normal;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 8px;
            }
        li.scroll-to-section .dropdown-list {
            display: none;
            position: absolute;
            background-color: white !important;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            padding: 5px;
            border-radius: 10px;
            border: 1px solid #ccc;
        }

            li.scroll-to-section .dropdown-list a {
                background-color: white;
                padding: 8px 12px;
                text-decoration: none;
                display: block;
                text-align: center;
                white-space: nowrap;
                line-height: normal !important;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                li.scroll-to-section .dropdown-list a:hover {
                    color: white !important;
                    background-color: #3414e4;
                }

        li.scroll-to-section:hover .dropdown-list {
            display: block;
        }

        .dropdown > .dropdown-toggle:active {
            pointer-events: none;
        }

        .header-area .main-nav .nav li a {
            border-radius: 0px !important;
        }

        .btn-primary {
            background-color: #7a6ad8;
            border: none;
            padding: 10px 15px;
            color: white;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #6a5ac8;
            }

        .text-user {
            color: #00ffef !important;
            font-weight:bold
        }
    </style>
</head>
<body>
    <ul class="nav">
        <li class="scroll-to-section">
             <a href="/">Trang Chủ</a>
        </li>
        <li class="scroll-to-section">
            <div class="dropdown">
                <a href="#" class="dropdown-toggle" id="dropdownMenuButton" aria-expanded="false">Phim</a>
                <ul class="dropdown-list">
                    @foreach (var item in ViewBag.phim)
                    {
                        <a class="text-dark" href="@Url.Action("Details", "Site", new { slug = item.TenRutGon })">@item.TenPhim</a>
                    }
                </ul>
            </div>
        </li>
        <li class="scroll-to-section">
            <a href="#" class="dropdown-toggle" id="dropdownMenuButton" aria-expanded="false">Chủ đề</a>
            <div class="dropdown-list">
                @foreach (var item in ViewBag.topic)
                {
                    <a class="text-dark" href="@Url.Action("PostTopic", "Site", new { slug = item.TenRutGon })">@item.TenChuDe</a>
                }
            </div>
        </li>
        @if (Session["NguoiDung"] == null)
        {
            <li class="scroll-to-section">
                <a href="@Url.Action("DangNhap","User")">Đăng nhập</a>
            </li>
        }
        else
        {
            ProjectFilm_CNPM.Models.ERD.NguoiDung nguoiDung;
            {
                int maND = (int)Session["NguoiDung"];
                var dbContext = new ProjectFilm_CNPM.Models.ApplicationDbContext();
                nguoiDung = dbContext.NguoiDungs.FirstOrDefault(nd => nd.MaND == maND);
            }
            <li class="scroll-to-section">
                <a href="@Url.Action("ProfileUser","User")">Chào,<span class="text-user"> @nguoiDung.TenND</span></a>
            </li>
            <li class="scroll-to-section">
                <a href="@Url.Action("DangXuat","User")">Đăng xuất</a>
            </li>
        }
    </ul>
</body>