<head>
    <style>
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        li.scroll-to-section {
            position: relative;
            display: inline-block;
        }

            li.scroll-to-section a {
                text-decoration: none;
                padding: 10px;
                display: block;
                color: black;
            }

            li.scroll-to-section .dropdown-content {
                display: none;
                position: absolute;
                background-color: #7a6ad8;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
                min-width: 160px;
                border-radius: 8px;
            }

                li.scroll-to-section .dropdown-content a {
                    color: white;
                    padding: 12px 16px;
                    text-decoration: none;
                    display: block;
                    text-align: center; 
                    line-height: normal; 
                    display: flex;
                    align-items: center;
                    justify-content: center; 
                }

                    li.scroll-to-section .dropdown-content a:hover {
                        background-color: #6a5ac8;
                    }

            li.scroll-to-section:hover .dropdown-content {
                display: block;
            }
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown > .dropdown-toggle:active {
            pointer-events: none;
        }
        .header-area .main-nav .nav li a{
            border-radius:0px!important;
        }
    </style>
</head>
<body>
    <ul class="nav">
        <li class="scroll-to-section">
            <div class="dropdown">
                <button data-mdb-button-init
                        data-mdb-ripple-init data-mdb-dropdown-init class="btn btn-primary dropdown-toggle"
                        type="button"
                        id="dropdownMenuButton"
                        data-mdb-toggle="dropdown"
                        aria-expanded="false">
                    Phim
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @foreach(var item in ViewBag.phim)
            {
                <li>
                    @*<img src="~/Public/img/phim/@item.Anh" class="img-fluid" />*@
                    <a class="dropdown-item text-primary" href="@Url.Action("Details", "Site", new { slug = item.TenRutGon })">@item.TenPhim</a>
                </li>
            }
                    
                </ul>
            </div>
        </li>
        <li class="scroll-to-section">
            <a href="#">Bài viết</a>
            <div class="dropdown-content">
                @foreach (var item in ViewBag.page)
                {
                    <a href="@Url.Action("PostPage", "Site", new { id = item.Id })">@item.TenBV</a>
                }
            </div>
        </li>
        <li class="scroll-to-section">
            <a href="#">Chủ đề</a>
            <div class="dropdown-content">
                @foreach (var item in ViewBag.topic)
                {
                    <a href="@Url.Action("PostTopic", "Site", new { id = item.Id })">@item.TenChuDe</a>
                }
            </div>
        </li>
        @if (Session["NguoiDung"] == null)
        {
            <li class="scroll-to-section">
                <a href="@Url.Action("DangNhap","Module")">Đăng nhập</a>
            </li>
        }
        else
        {
            ProjectFilm_CNPM.Models.ERD.NguoiDung nguoiDung;
            {

                int maND = (int)Session["NguoiDung"];
                var dbContext = new ProjectFilm_CNPM.Models.ApplicationDbContext();
                nguoiDung = dbContext.NguoiDungs.FirstOrDefault(nd => nd.MaND == maND);
            }
            <li class="">
                <a href="#">Xin chào<span class="text-warning"> @nguoiDung.TenND</span></a>
            </li>
            <li class="">
                <a href="@Url.Action("DangXuat")">Đăng xuất</a>
            </li>
        }
    </ul>
</body>
