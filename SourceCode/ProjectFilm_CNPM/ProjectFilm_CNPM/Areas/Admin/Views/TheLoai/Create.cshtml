@model ProjectFilm_CNPM.Models.ERD.TheLoai
@{
    ViewBag.Title = "TheLoai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "TheLoai", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">TẠO MỚI CHỦ ĐỀ</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Index","TheLoai")" class="btn-sm btn-primary"><i class="fa fa-arrow-left"> Quay lại</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <div class="row">
                                @* Phần nhập dữ liệu bằng tay *@
                                <div class="col-md-6">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenTheLoai, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaPhim, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.MaPhim, (IEnumerable<SelectListItem>)ViewBag.PhimList, "-- Chọn phim --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @Html.AntiForgeryToken()
                                    <button class="btn-sm btn-success" type="submit" name="create">Lưu/Thêm<i class="fa fa-save"></i></button>
                                </div>
                            </div>
                        </div> <!-- /.card-footer-->
                    </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
}