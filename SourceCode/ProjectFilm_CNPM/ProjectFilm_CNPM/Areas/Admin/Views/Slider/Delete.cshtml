﻿@model ProjectFilm_CNPM.Models.ERD.Slider

@{
    ViewBag.Title = "Xác nhận xóa mẩu tin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var item = Model;
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÁC NHẬN XÓA MẪU TIN</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Trash","Slider")" class="btn-sm btn-primary"><i class="fa fa-arrow-left"> Quay lại</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.TenSlider)</th>
                                    <th class="col-md-1">@Html.DisplayNameFor(modelItem => modelItem.Anh)</th>
                                    <th>@Html.DisplayNameFor(model => model.URL)</th>
                                    <th>@Html.DisplayNameFor(model => model.SapXep)</th>
                                    <th>@Html.DisplayNameFor(model => model.ViTri)</th>
                                    <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayCapNhat)</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.TenSlider)</td>
                                    <td><img src="~/Public/img/slider/@item.Anh" alt="Img" class="img-fluid" /></td>
                                    <td>@Html.DisplayFor(model => model.URL)</td>
                                    <td>@Html.DisplayFor(model => model.SapXep)</td>
                                    <td>@Html.DisplayFor(model => model.ViTri)</td>
                                    <td>@Html.DisplayFor(model => model.MoTa)</td>
                                    <th>@Html.DisplayFor(model => model.NgayTao)</th>
                                    <th>@Html.DisplayFor(model => model.NgayCapNhat)</th>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-actions no-color mt-4">
                            <button class="btn-sm btn-danger" type="submit" name="save">Delete<i class="fa fa-trash"></i></button>
                        </div>
                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->

}