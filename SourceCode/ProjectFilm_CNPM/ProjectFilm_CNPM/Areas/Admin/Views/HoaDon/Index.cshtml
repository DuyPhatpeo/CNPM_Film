﻿@model IEnumerable<ProjectFilm_CNPM.Models.ERD.HoaDon>

@{
    ViewBag.Title = "Danh sách các hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var i = 1;
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH HÓA ĐƠN</strong>
                        </div>
                       @* <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create","Phim")" class="btn-sm btn-success"><i class="fa fa-plus"> Thêm</i></a>
                            <a href="@Url.Action("Trash","Phim")" class="btn-sm btn-danger"><i class="fa fa-trash"> Thùng rác</i></a>
                        </div>*@
                    </div>
                </div>
                <div class="card-body">
                    @*hien thi dong thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>@Html.DisplayNameFor(model => model.MaHD)</th>
                                <th>@Html.DisplayNameFor(model => model.NguoiDung.TenND)</th>
                                <th>@Html.DisplayNameFor(model => model.NgayLapHD)</th>
                                <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaHD)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NguoiDung.TenND)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayLapHD)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                                    <td>
                                        <a href="@Url.Action("Details","HoaDon", new { id = item.MaHD })" class="btn-sm btn-info"><i class="fa fa-eye"></i></a>
                                    </td>
                                    @{ i++; }
                                </tr>

                            }
                        </tbody>

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->