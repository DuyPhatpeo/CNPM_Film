@model IEnumerable<ProjectFilm_CNPM.Models.ERD.ChiTietHoaDon>

@{
    ViewBag.Title = "Danh sách các CTHD của hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var i = 1;
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH CHI TIẾT HÓA ĐƠN</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "HoaDon")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    @*hien thi dong thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>@Html.DisplayNameFor(model => model.MaCTHD)</th>
                                <th>@Html.DisplayNameFor(model => model.SuatChieu.GioChieu)</th>
                                <th>@Html.DisplayNameFor(model => model.HoaDon.NguoiDung.TenND)</th>
                                <th>@Html.DisplayNameFor(model => model.Ghe.TenGhe)</th>
                                <th>@Html.DisplayNameFor(model => model.Ghe.Phong.TenPhong)</th>
                                <th>@Html.DisplayNameFor(model => model.BapNuoc)</th>
                                <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                                <th>@Html.DisplayNameFor(model => model.Ghe.GiaGhe)</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaCTHD)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SuatChieu.GioChieu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HoaDon.NguoiDung.TenND)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ghe.TenGhe)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ghe.Phong.TenPhong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ghe.GiaGhe)</td>
                                    <td>
                                        @if (item.BapNuoc)
                                        {
                                            <span>Có</span>
                                        }
                                        else
                                        {
                                            <span>Không</span>
                                        }
                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>

                                    @{ i++; }
                                </tr>

                            }
                        </tbody>

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->