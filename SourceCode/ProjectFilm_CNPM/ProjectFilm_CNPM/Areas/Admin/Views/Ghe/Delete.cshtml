@model ProjectFilm_CNPM.Models.ERD.Ghe

@{
    ViewBag.Title = "Xác nhận xóa mẩu tin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var item = Model;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÁC NHẬN XÓA MẪU TIN</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Trash","Ghe")" class="btn-sm btn-primary"><i class="fa fa-arrow-left"> Quay lại</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.MaGhe)</th>
                                    <th>@Html.DisplayNameFor(model => model.TenGhe)</th>
                                    <th>@Html.DisplayNameFor(model => model.Phong.TenPhong)</th>
                                    <th>@Html.DisplayNameFor(model => model.LoaiGhe)</th>
                                    <th>@Html.DisplayNameFor(model => model.GiaGhe)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayCapNhat)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.MaGhe)</td>
                                    <td>@Html.DisplayFor(model => model.TenGhe)</td>
                                    <td>@Html.DisplayFor(model => model.Phong.TenPhong)</td>
                                    <td>@Html.DisplayFor(model => model.LoaiGhe)</td>
                                    <td>@Html.DisplayFor(model => model.GiaGhe)</td>
                                    <th>@Html.DisplayFor(model => model.NgayTao)</th>
                                    <th>@Html.DisplayFor(model => model.NgayCapNhat)</th>

                                </tr>
                            </tbody>

                        </table>
                        <div class="form-actions no-color mt-4">
                            <button class="btn-sm btn-danger" type="submit" name="save">Delete<i class="fa fa-trash"></i></button>
                        </div>
                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->

}